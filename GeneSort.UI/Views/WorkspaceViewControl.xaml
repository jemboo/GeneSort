<UserControl x:Class="GeneSort.UI.Views.WorkspaceViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeneSort.UI.Views"
             xmlns:vm="clr-namespace:GeneSort.UI.ViewModels" xmlns:common="clr-namespace:GeneSort.UI.Views.Common"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Loading Indicator -->
        <Grid Grid.Row="0" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" Height="4" Margin="0,0,0,10"/>
        </Grid>

        <!-- Workspace Info -->
        <Border Grid.Row="1" 
                Background="LightBlue" 
                BorderBrush="DarkBlue" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="{Binding WorkspaceName}" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="DarkBlue"/>
                <TextBlock Text="{Binding WorkspaceDescription}" 
                           FontSize="12" 
                           Margin="0,5,0,0"
                           TextWrapping="Wrap"/>
                <TextBlock Text="{Binding RootDirectory, StringFormat='Root Directory: {0}'}" 
                           FontSize="12" 
                           Foreground="DarkBlue" 
                           Margin="0,5,0,0"/>
                <TextBlock Text="{Binding ReportKeys.Count, StringFormat='Total Run Parameters: {0}'}" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Error Message -->
        <Border Grid.Row="2" 
                Background="LightPink" 
                BorderBrush="Red" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Visibility="{Binding ErrorMessage, Converter={x:Static local:NullToVisibilityConverter.Collapsed}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="DarkRed" 
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Parameters Table -->
        <ContentControl Grid.Row="2" 
                        Content="{Binding ParametersDataGrid}"
                        Visibility="{Binding ErrorMessage, Converter={x:Static local:NullToVisibilityConverter.Visible}}"/>

        <!-- Run Button and Report Buttons -->
        <Border Grid.Row="3" 
                Background="LightGreen" 
                BorderBrush="DarkGreen" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!-- Run Button Section -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">

                    <common:RunCancelControl HorizontalAlignment="Center" VerticalAlignment="Center"
                               RunCommand="{Binding RunOperationCommand}"
                               CancelCommand="{Binding CancelOperationCommand}"
                               IsRunning="{Binding IsRunning, Mode=TwoWay}" />

                    <!-- Report Buttons Section -->
                    <ScrollViewer Grid.Column="1" 
                             HorizontalScrollBarVisibility="Auto" 
                             VerticalScrollBarVisibility="Disabled"
                             Margin="20,0,0,0">
                        <ItemsControl ItemsSource="{Binding ReportKeys}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" 
                                        Command="{Binding DataContext.GenerateReportCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        IsEnabled="{Binding DataContext.CanRunSelected, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Padding="12,8"
                                        Margin="5,0"
                                        FontWeight="SemiBold"
                                        BorderThickness="0">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                                <Setter Property="Background" Value="DarkBlue"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="Gray"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </StackPanel>
                

                <TextBlock Grid.Row="1" Text="{Binding RunMessage}" 
                               VerticalAlignment="Center" 
                               Margin="0,5,0,0"
                               FontWeight="SemiBold"/>

                <ProgressBar 
                     Grid.Row="2"
                     Maximum="{Binding ProgressMaximum}" 
                     Value="{Binding ProgressValue}" 
                     Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}" />
                
                <TextBlock 
                    Grid.Row="3"
                    Text="{Binding ProgressMessage}" />

            </Grid>
        </Border>
    </Grid>
</UserControl>