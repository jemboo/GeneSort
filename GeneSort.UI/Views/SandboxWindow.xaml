<Window x:Class="GeneSort.UI.Views.SandboxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sandbox Window"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <StackPanel Margin="20" VerticalAlignment="Top">
            <TextBlock Text="Sandbox Window for Control Testing"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>
            <!-- Place your test controls below -->
            <Button Content="Test Button" Width="120" Height="40" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>