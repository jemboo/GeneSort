<UserControl x:Class="GeneSort.UI.Views.WorkspaceViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeneSort.UI.Views"
             xmlns:vm="clr-namespace:GeneSort.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Loading Indicator -->
        <Grid Grid.Row="0" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar IsIndeterminate="True" Height="4" Margin="0,0,0,10"/>
        </Grid>

        <!-- Workspace Info -->
        <Border Grid.Row="1" 
                Background="LightBlue" 
                BorderBrush="DarkBlue" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="{Binding WorkspaceName}" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="DarkBlue"/>
                <TextBlock Text="{Binding WorkspaceDescription}" 
                           FontSize="12" 
                           Margin="0,5,0,0"
                           TextWrapping="Wrap"/>
                <TextBlock Text="{Binding RootDirectory, StringFormat='Root Directory: {0}'}" 
                           FontSize="10" 
                           Foreground="DarkGray" 
                           Margin="0,5,0,0"/>
                <TextBlock Text="{Binding RunParameterRows.Count, StringFormat='Total Run Parameters: {0}'}" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Error Message -->
        <Border Grid.Row="2" 
                Background="LightPink" 
                BorderBrush="Red" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Visibility="{Binding ErrorMessage, Converter={x:Static local:NullToVisibilityConverter.Collapsed}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="DarkRed" 
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Parameters Table -->
        <ContentControl Grid.Row="2" 
                        Content="{Binding ParametersDataGrid}"
                        Visibility="{Binding ErrorMessage, Converter={x:Static local:NullToVisibilityConverter.Visible}}"/>
    </Grid>
</UserControl>