<UserControl x:Class="GeneSort.UI.Views.ExperimentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeneSort.UI.Views"
             xmlns:models="clr-namespace:GeneSort.UI.Models"
             xmlns:converters="clr-namespace:GeneSort.UI.Converters"
             xmlns:behaviors="clr-namespace:GeneSort.UI.Behaviors" xmlns:vm="clr-namespace:GeneSort.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*" MinWidth="300"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Directory Tree and Open Button -->
        <Grid Grid.Column="0" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <TreeView Grid.Row="0"
                    DataContext="{Binding .}"
                    ItemsSource="{Binding Root.Children}"
                    behaviors:TreeViewBehavior.BindableSelectedItem= "True"
                    behaviors:TreeViewBehavior.SelectionAction="{Binding SelectionAction, Mode=OneWay}"
                    Height="Auto">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}" DataType="{x:Type models:ExperimentDirectoryItem}">
                        <TextBlock Text="{Binding Name}" 
                                    FontWeight="{Binding IsDirectory, Converter={x:Static converters:BooleanToFontWeightConverter.Instance}}"/>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

            <Button Grid.Row="1" Content="Open File"
                    Height="30"
                    Command="{Binding OpenSelectedFileCommand}"
                    Style="{StaticResource ModernButton}"
                    Margin="0,8,0,0"
                    IsEnabled="{Binding CanOpenSelectedFile}"/>

            <TextBlock 
                    Grid.Row="2"
                    Text="{Binding ErrorMessage}"
                    TextWrapping="Wrap" 
                    FontWeight="SemiBold" 
                    FontSize="10" 
                    Foreground="#FFF40E0E" />

        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" 
                      Width="5" 
                      Background="LightGray" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch" 
                      ShowsPreview="False"/>

        <!-- Right: File Tabs -->
        <TabControl Grid.Column="2" 
                    ItemsSource="{Binding FileTabs}"
                    SelectedItem="{Binding SelectedFileTab, Mode=TwoWay}"
                    Margin="8">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Header}" FontWeight="SemiBold" Margin="8,4,0,0" VerticalAlignment="Center"/>
                        <Button Content="×" 
                            Command="{Binding DataContext.CloseFileTabCommand, RelativeSource={RelativeSource AncestorType=TabControl}}" 
                            CommandParameter="{Binding}"
                            Style="{StaticResource CloseButtonStyle}"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding ContentVm}">
                        <ContentControl.Resources>
                            <!-- Template for WorkspaceViewViewModel -->
                            <DataTemplate DataType="{x:Type vm:ProjectParamsVm}">
                                <local:WorkspaceViewControl />
                            </DataTemplate>

                            <!-- Template for FileViewerViewModel (your existing one) -->
                            <DataTemplate DataType="{x:Type vm:FileViewerViewModel}">
                                <local:FileViewerControl />
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>