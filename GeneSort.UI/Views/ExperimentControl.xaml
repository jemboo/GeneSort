<UserControl x:Class="GeneSort.UI.Views.ExperimentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GeneSort.UI.Views"
             xmlns:models="clr-namespace:GeneSort.UI.Models"
             xmlns:converters="clr-namespace:GeneSort.UI.Converters"
             xmlns:behaviors="clr-namespace:GeneSort.UI.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*" MinWidth="300"/>
        </Grid.ColumnDefinitions>

         <!--Left: Directory Tree-->
        <TreeView Grid.Column="0" 
                  ItemsSource="{Binding Root.Children}"
                  behaviors:TreeViewBehavior.BindableSelectedItem="{Binding SelectedDirectory, Mode=OneWayToSource}"
                  Margin="8">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}" DataType="{x:Type models:ExperimentDirectoryItem}">
                    <TextBlock Text="{Binding Name}" 
                               FontWeight="{Binding IsDirectory, Converter={x:Static converters:BooleanToFontWeightConverter.Instance}}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" 
                      Width="5" 
                      Background="LightGray" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch" 
                      ShowsPreview="False"/>

        <!-- Right: File Tabs -->
        <TabControl Grid.Column="2" 
                    ItemsSource="{Binding FileTabs}"
                    SelectedItem="{Binding SelectedFileTab, Mode=TwoWay}"
                    Margin="8">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}" 
                               Margin="8,4" 
                               FontWeight="SemiBold"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding ContentVm}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>